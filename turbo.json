{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "JWT_SECRET",
        "SENTRY_DSN",
        "PAYMENT_VAULT_API_KEY",
        "PAYMENT_GATEWAY_TEST_KEY",
        "FRONTEND_URL",
        "VITE_*"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "DATABASE_URL",
        "JWT_SECRET",
        "SENTRY_DSN",
        "PAYMENT_VAULT_API_KEY",
        "PAYMENT_GATEWAY_TEST_KEY",
        "FRONTEND_URL",
        "VITE_*"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "outputs": ["**/*.{ts,tsx,js,jsx,json,css,scss}"],
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "playwright:install": {
      "cache": false
    },
    "test:checkout": {
      "cache": false
    },
    "generate:traffic": {
      "cache": false
    },
    "generate:usage": {
      "cache": false
    },
    "db:new": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "studio": {
      "cache": false,
      "persistent": true
    }
  }
}
